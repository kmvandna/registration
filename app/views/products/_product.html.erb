<div id="<%= dom_id product %>"> 

  <p>
    <% if product.image.attached? %>
      <%= image_tag product.image, width:"100px"%>
    <% end %>
  </p>

  <p>
    <strong>Productname:</strong>
    <%= product.productName %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

</div>
